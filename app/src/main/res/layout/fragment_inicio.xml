<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InicioFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B2EBF2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:scrollbars="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/titulo_top_ventas"
                android:textSize="30sp"
                android:textStyle="bold" />

            <!-- Libro 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="20dp">

                <ImageView
                    android:id="@+id/iv_portada_1"
                    android:layout_width="160dp"
                    android:layout_height="240dp"
                    android:contentDescription="@string/portada_del_libro"
                    android:scaleType="fitCenter"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/alas_de_sangre" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingVertical="20dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/portada_del_libro"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_one" />

                    <TextView
                        android:id="@+id/tv_titulo_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        tools:text="Alas de Sangre"
                        android:textSize="24sp"
                        android:textAlignment="center"
                        android:textStyle="bold" />

                    <!-- Título del libro -->
                    <TextView
                        android:id="@+id/tv_autor_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        tools:text="Rebecca Yarros"
                        android:textSize="18sp" />

                    <!-- Año de publicación -->
                    <TextView
                        android:id="@+id/tv_anio_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        tools:text="2023"
                        android:textColor="#006064"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Libro 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="20dp">

                <ImageView
                    android:id="@+id/iv_portada_2"
                    android:layout_width="160dp"
                    android:layout_height="240dp"
                    android:contentDescription="@string/portada_del_libro"
                    android:scaleType="fitCenter"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/alas_de_sangre" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingVertical="20dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/portada_del_libro"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_two" />

                    <TextView
                        android:id="@+id/tv_titulo_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        tools:text="Alas de Sangre"
                        android:textSize="24sp"
                        android:textAlignment="center"
                        android:textStyle="bold" />

                    <!-- Título del libro -->
                    <TextView
                        android:id="@+id/tv_autor_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        tools:text="Rebecca Yarros"
                        android:textSize="18sp" />

                    <!-- Año de publicación -->
                    <TextView
                        android:id="@+id/tv_anio_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        tools:text="2023"
                        android:textColor="#006064"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Libro 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="20dp">

                <ImageView
                    android:id="@+id/iv_portada_3"
                    android:layout_width="160dp"
                    android:layout_height="240dp"
                    android:contentDescription="@string/portada_del_libro"
                    android:scaleType="fitCenter"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/alas_de_sangre" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingVertical="20dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/portada_del_libro"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_three" />

                    <TextView
                        android:id="@+id/tv_titulo_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        tools:text="Alas de Sangre"
                        android:textSize="24sp"
                        android:textAlignment="center"
                        android:textStyle="bold" />

                    <!-- Título del libro -->
                    <TextView
                        android:id="@+id/tv_autor_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        tools:text="Rebecca Yarros"
                        android:textSize="18sp" />

                    <!-- Año de publicación -->
                    <TextView
                        android:id="@+id/tv_anio_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        tools:text="2023"
                        android:textColor="#006064"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>