<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.Material3.CardView.Elevated"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B2EBF2"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Contenedor de información del estudiante -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Nombre del estudiante -->
            <TextView
                android:id="@+id/tv_titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Alas de Sangre"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Título del libro -->
            <TextView
                android:id="@+id/tv_autor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                tools:text="Rebecca Yarros"
                android:textSize="18sp" />

            <!-- Año de publicación -->
            <TextView
                android:id="@+id/tv_anio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                tools:text="2023"
                android:textColor="#006064"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_ver_detalle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/ver_detalle"
                android:textColor="?attr/colorPrimary" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="end"
                android:backgroundTint="#B2EBF2"
                android:pointerIcon="hand"
                app:icon="@drawable/icon_car"
                app:iconTint="#0097A7" />

        </LinearLayout>

        <!-- Portada del libro -->
        <ImageView
            android:id="@+id/iv_portada"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:contentDescription="@string/portada_del_libro"
            android:scaleType="fitCenter"
            android:src="@drawable/alas_de_sangre" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>