<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    style="@style/Widget.Material3.CardView.Elevated">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#B2EBF2"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Contenedor de información del estudiante -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginEnd="16dp">

            <!-- Nombre del estudiante -->
            <TextView
                android:id="@+id/tv_titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alas de Sangre"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Título del libro -->
            <TextView
                android:id="@+id/tv_autor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Rebecca Yarros"
                android:textSize="18sp" />

            <!-- Año de publicación -->
            <TextView
                android:id="@+id/tv_anio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="2023"
                android:textSize="16sp"
                android:textColor="#006064" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                app:iconTint="#0097A7"
                android:backgroundTint="#B2EBF2"
                app:icon="@drawable/icon_car"
                android:pointerIcon="hand"
                android:layout_gravity="end"
                />

        </LinearLayout>

        <!-- Portada del libro -->
        <ImageView
            android:id="@+id/iv_portada"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:src="@drawable/alas_de_sangre"
            android:scaleType="fitCenter"
            android:contentDescription="Android Logo" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>