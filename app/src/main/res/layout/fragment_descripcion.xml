<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".DescripcionFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B2EBF2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:scrollbars="vertical">

            <ImageView
                android:id="@+id/iv_portada"
                android:layout_width="160dp"
                android:layout_height="240dp"
                android:contentDescription="@string/portada_del_libro"
                android:scaleType="fitCenter"
                android:src="@drawable/alas_de_sangre" />

            <!-- Año de publicación -->
            <TextView
                android:id="@+id/tv_anio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="#006064"
                android:textSize="14sp"
                tools:text="2023" />

            <TextView
                android:id="@+id/tv_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:text="Alas de Sangre" />

            <!-- Título del libro -->
            <TextView
                android:id="@+id/tv_autor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="18sp"
                tools:text="Rebecca Yarros" />

            <TextView
                android:id="@+id/tv_precio_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="#B00020"
                android:textSize="22sp"
                android:textStyle="bold"
                tools:text="$23.000" />

            <TextView
                android:id="@+id/tv_detalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="4dp"
                android:justificationMode="inter_word"
                android:textSize="18sp"
                tools:text="@string/descripcion_inventada" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>